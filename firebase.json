{
  "hosting": {
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],

    "redirects": [
      { "source": "/", "destination": "/vantra-business-services/", "type": 302 }
    ],

    "rewrites": [
      { "source": "/walkthrough", "destination": "/vantra-business-services/index.html" },
      { "source": "/walkthrough/**", "destination": "/vantra-business-services/index.html" },

      { "source": "/vantra-business-services", "destination": "/vantra-business-services/index.html" },
      { "source": "/vantra-business-services/**", "destination": "/vantra-business-services/index.html" }
    ],

    "headers": [
      {
        "source": "**/*.@(js|css|svg|png|jpg|jpeg|gif|webp|woff2|ttf)",
        "headers": [{ "key": "Cache-Control", "value": "public,max-age=31536000,immutable" }]
      },
      {
        "source": "/vantra-business-services/index.html",
        "headers": [{ "key": "Cache-Control", "value": "no-cache" }]
      }
    ]
  }
}
